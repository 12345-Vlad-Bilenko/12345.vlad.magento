<?php
$collection = $block->getProductCollection();
$categoryId = $block->getCategoryId();
?>

<style>
    .product-widget-container {
        border: 2px solid #ccc;
        padding: 20px;
        margin: 20px 0;
        background-color: #f9f9f9;
    }

    .product-widget-container ul {
        list-style-type: none;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .product-widget-container li {
        border: 1px solid #ddd;
        border-radius: 5px;
        margin: 10px;
        padding: 15px;
        width: calc(20% - 20px);
        box-sizing: border-box;
        transition: transform 0.3s ease, background-color 0.3s ease;
    }

    .product-widget-container li:hover {
        transform: scale(1.05);
        background-color: #e0f7fa;
    }

    .product-widget-container img {
        max-width: 100%;
        height: auto;
    }

    .product-widget-container p {
        margin: 5px 0;
    }

    .product-widget-container form {
        display: flex;
        justify-content: center;
        margin-top: 10px;
    }

    .product-widget-container button {
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .product-widget-container button:hover {
        background-color: #218838;
    }
</style>

<div class="product-widget-container">
    <?php if (!empty($collection) && count($collection) > 0): ?>
        <ul>
            <?php foreach ($collection as $product): ?>
                <li>
                    <a href="<?php echo $product->getProductUrl(); ?>">
                        <?php echo $product->getName(); ?>
                    </a>

                    <?php
                    // Получаем URL изображения из класса
                    $imageUrl = $product->getData('image_url');
                    ?>
                    <?php if ($imageUrl): ?>
                        <img src="<?php echo $imageUrl; ?>" alt="<?php echo $product->getName(); ?>">
                    <?php endif; ?>

                    <p><?php echo number_format($product->getPrice(), 2, '.', ' '); ?> $</p>

                    <?php if ($product->getRatingSummary()): ?>
                        <p>Rating: <?php echo $product->getRatingSummary()->getRatingSummary(); ?>%</p>
                    <?php endif; ?>

                    <?php if ($product->getTypeId() === 'configurable' && $product->getAvailableProductTypes()): ?>
                        <p>Available Sizes:</p>
                        <ul>
                            <?php foreach ($product->getAvailableProductTypes() as $size): ?>
                                <li><?php echo $size; ?></li>
                            <?php endforeach; ?>
                        </ul>
                    <?php endif; ?>

                    <form action="<?php echo $block->getUrl('checkout/cart/add'); ?>" method="post">
                        <input type="hidden" name="product" value="<?php echo $product->getId(); ?>">
                        <button type="submit">Add to Cart</button>
                    </form>
                </li>
            <?php endforeach; ?>
        </ul>
    <?php else: ?>
        <p>No products found in this category.</p>
    <?php endif; ?>
</div>
